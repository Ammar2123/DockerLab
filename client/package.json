{
  "main": "main.cjs",
  "name": "dockerhub",
  "description": "Electron desktop app to run Docker lab environments",
  "private": true,
  "author": {
    "name": "Ammar",
    "email": "ammar@nagarji.in"
  },
  "homepage": "https://github.com/ammar2123/dockerlab",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "node build-prep.cjs && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist": "node build-prep.cjs && vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@rollup/rollup-linux-x64-gnu": "^4.44.1",
    "axios": "^1.11.0",
    "fastq": "^1.19.1",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.487.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^7.5.0",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^35.7.2",
    "electron-builder": "^26.0.12",
    "electron-installer-debian": "^3.2.0",
    "electron-packager": "^17.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.1",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "apsithub.apsit.edu.in",
    "productName": "Dockerhub",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.cjs"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "assets"
      },
      {
        "from": "scripts",
        "to": "scripts"
      },
      {
        "from": "python/",
        "to": "python"
      }
    ],
    "asarUnpack": [
      "python/**",
      "scripts/**"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./vite.svg",
      "category": "Utility"
    }
  }
}
